.login {
  width: 100%;
  height: 100%;
  background-image: url('images/bg.png');
  background-size: cover;
}
.login .login-header {
  height: 80px;
  background-color: rgba(21, 20, 13, 0.35);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.login .login-header h1 {
  color: white;
}
.login .login-header img {
  width: 50px;
  height: 50px;
  margin: 0 20px 0 50px;
}
.login .kaMiIMG {
  position: absolute;
  top: 169px;
}
.login .login-content {
  position: absolute;
  width: 400px;
  height: 300px;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 30px;
}
.login .login-content h2 {
  font-size: 30px;
  text-align: center;
  margin: 0;
  margin-bottom: 25px;
}
.login .login-content .login-form .login-form-button {
  width: 100%;
}
.login .guiSiIMG {
  position: fixed;
  width: 100px;
  height: 100px;
  bottom: 0;
}
