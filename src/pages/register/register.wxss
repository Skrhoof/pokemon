.register {
  width: 100%;
  height: 100%;
  background-image: url('images/bg.png');
  background-size: cover;
}
.register .register-header {
  height: 80px;
  background-color: rgba(21, 20, 13, 0.35);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.register .register-header h1 {
  color: white;
}
.register .register-header img {
  width: 50px;
  height: 50px;
  margin: 0 20px 0 50px;
}
.register .kaMiIMG {
  position: absolute;
  top: 169px;
}
.register .register-content {
  position: absolute;
  width: 450px;
  height: 500px;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 30px;
}
.register .register-content h2 {
  font-size: 30px;
  text-align: center;
  margin: 0;
  margin-bottom: 25px;
}
.register .register-content .register-form .register-form-button {
  width: 100%;
}
.register .guiSiIMG {
  position: fixed;
  width: 100px;
  height: 100px;
  bottom: 0;
}
